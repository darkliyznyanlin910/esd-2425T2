{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@repo/ui/*": ["../../packages/ui/src/*"] // Need to fix this to be more dynamic
    },
    "plugins": [{ "name": "next" }],
    "module": "esnext",
    "moduleResolution": "Bundler"
  },
  "include": [".", ".next/types/**/*.ts"],
  "exclude": ["node_modules", ".next"]
}
