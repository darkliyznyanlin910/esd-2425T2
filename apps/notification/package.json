  "prettier": "@repo/prettier-config",
  "dependencies": {
    "@hono/node-server": "^1.13.8",
    "@hono/zod-validator": "^0.4.2",
    "@repo/auth": "workspace:*",
    "@repo/db-order": "workspace:*",
    "@repo/service-discovery": "workspace:*",
    "@scalar/hono-api-reference": "^0.5.170",
    "dotenv-cli": "catalog:",
    "hono": "^4.6.20",
    "tsx": "^4.19.2",
    "zod": "catalog:",
    "zod-openapi": "^4.2.3"
  }
